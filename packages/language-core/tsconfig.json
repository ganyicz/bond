{
    "compilerOptions": {
        "target": "ES2021",
        "lib": ["ES2021"],
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "strict": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "baseUrl": "./",
        "outDir": "dist",
        "rootDir": "src"
    },
    "include": ["src"]
}
