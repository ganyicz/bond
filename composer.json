{
    "name": "ganyicz/bond",
    "description": "Modern component authoring for Laravel Blade and Alpine.js",
    "keywords": [
        "laravel",
        "blade",
        "alpinejs"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "laravel/framework": "^11.0 | ^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.24"
    },
    "autoload": {
        "psr-4": {
            "Ganyicz\\Bond\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Ganyicz\\Bond\\BondServiceProvider"
            ]
        }
    },
    "scripts": {
        "lint": [
            "pint --parallel"
        ],
        "lint:check": [
            "pint --parallel --test"
        ]
    }
}
